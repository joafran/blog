---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import BaseLayout from "../layouts/BaseLayout.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
  <section class="text-center">
    <p class="text-xl">{t("404.nothing")}</p>
    <h2 class="text-inherit text-lg">
      {t("404.goto")}
      <a class="dark:text-orange-500 font-semibold" href={`/${lang}/`}>Index</a>
    </h2>
    <img src="/not-found.svg" width="768" height="400" />
  </section>
</BaseLayout>
