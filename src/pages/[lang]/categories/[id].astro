---
import CategoryPosts from "../../../layouts/CategoryPosts.astro";
import { languages } from "../../../i18n/ui";
import { POST_TAGS } from "../../../consts";

export async function getStaticPaths() {
  const paths = Object.keys(languages).flatMap((lang) => {
    return Object.values(POST_TAGS).map((tag) => ({
      params: { lang, id: tag.toLowerCase().replace(" ", "_") },
      props: { name: tag },
    }));
  });

  return paths;
}

const { name } = Astro.props;
---

<CategoryPosts category={name} />
